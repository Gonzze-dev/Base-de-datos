CREATE TABLE IF NOT EXISTS "empleado"(
    "dni" INT NOT NULL,
    "apellido" VARCHAR(40) NOT NULL,
    "nombre" VARCHAR(40) NOT NULL,
    "genero" CHAR NOT NULL,
    "sueldo" INT NOT NULL,
    CONSTRAINT "PK_EMPLEADO" PRIMARY KEY ("dni")
);

