CREATE TABLE IF NOT EXISTS departamento(
    "codigo" INT NOT NULL,
    "nombre" VARCHAR(20) NOT NULL,
    CONSTRAINT "PK_CODIGO" PRIMARY KEY (codigo)
);

INSERT INTO departamento (codigo, nombre)
VALUES
    (1,'PRODUCCION'),
    (2,'COMPUTOS'),
    (3,'VENTAS'),
    (4,'DEPOSITO');

DELETE FROM departamento WHERE nombre = 'VENTAS';

CREATE TABLE IF NOT EXISTS "trabajapara"(
    "dni" INT NOT NULL,
    "codigo" INT NOT NULL,
    "horas" INT NOT NULL,
    CONSTRAINT "PK_TRABAJAPARA" PRIMARY KEY ("dni", "codigo"),
    
    CONSTRAINT "FK_dniEmpleado" 
    FOREIGN KEY ("dni") REFERENCES empleado (dni),
    
    CONSTRAINT "FK_codigoDepartamento" FOREIGN KEY ("codigo")
    REFERENCES departamento (codigo)
);

